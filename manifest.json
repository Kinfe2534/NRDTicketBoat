{
  "manifest_version": 3,
  "name": "Purchase Tracker",
  "version": "1.0.0",
  "description": "Scraps purchase info from different ticket selling platforms such as Ticketmaster and Axs.",
  "short_name": "PURCHASE TRACKER EXTENSION",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "notifications",
    "downloads",
    "unlimitedStorage",
    "contextMenus",
    "sidePanel",
    "cookies",
    "browsingData",
    "webRequest",
    "declarativeNetRequest"
  ],
  "host_permissions": ["<all_urls>"],
  "optional_permissions": ["clipboardWrite"],
  "background": {
    "service_worker": "js/service_worker.js"
  },
  "action": {
    "default_icon": {
      "16": "images/icon.png",
      "32": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    },
    "default_title": "Purchase Tracker",
    "default_popup": "html/popup.html"
  },
  "side_panel": {
    "default_path": "html/sidepanel.html"
  },
  
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "tm_cors_rulset",
        "enabled": true,
        "path": "ruleset/tm_cors_rulset.json"
      }
    ]
  },
  "content_scripts": [
    {
      "js": [
        "js/jquery.js",
        "js/jquery.toast.min.js",
        "js/bootstrap.js",
        "js/file_saver.js",
        "js/dom-to-image-more.js",
        "js/content.js"
      ],
      "css": ["css/bootstrap.css", "css/content.css"],
      "matches": [
        
        "https://*.ticketmaster.com/*",
        "https://*.etix.com/*",
        "https://*.axs.com/*",
        "https://*.axs.co.uk/*"
      ],
      "match_about_blank": true,
      "all_frames": false,
      "run_at": "document_end"
    }
  ]
}
